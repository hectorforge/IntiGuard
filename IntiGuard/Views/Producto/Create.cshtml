@model IntiGuard.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-box-seam"></i> Crear Nuevo Producto</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="row g-3">
                            <!-- Nombre -->
                            <div class="col-md-6">
                                <label asp-for="NombreProducto" class="form-label fw-bold"></label>
                                <input asp-for="NombreProducto" class="form-control" placeholder="Ingrese nombre del producto" />
                                <span asp-validation-for="NombreProducto" class="text-danger"></span>
                            </div>

                            <!-- Marca -->
                            <div class="col-md-6">
                                <label asp-for="Marca" class="form-label fw-bold"></label>
                                <input asp-for="Marca" class="form-control" placeholder="Ejemplo: Hikvision" />
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>

                            <!-- Descripción -->
                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label fw-bold"></label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Ingrese una breve descripción del producto"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>

                            <!-- Precio -->
                            <div class="col-md-6">
                                <label asp-for="Precio" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">S/.</span>
                                    <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>

                            <!-- Stock -->
                            <div class="col-md-6">
                                <label asp-for="Stock" class="form-label fw-bold"></label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="Cantidad disponible" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>

                            <!-- Imagen -->
                            <div class="col-12">
                                <label asp-for="ImagenUrl" class="form-label fw-bold"></label>
                                <input asp-for="ImagenUrl" class="form-control" placeholder="URL de la imagen o ruta en /assets/img/portfolio" />
                                <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
