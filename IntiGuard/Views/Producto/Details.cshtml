@model IntiGuard.Models.Producto

@{
    ViewData["Title"] = "Detalle Producto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">
            <div class="col-md-5 d-flex align-items-center justify-content-center bg-light p-3">
                <img src="@(!string.IsNullOrEmpty(Model.ImagenUrl) ? Url.Content(Model.ImagenUrl) : Url.Content("~/images/no-image.png"))"
                     alt="@Model.NombreProducto"
                     class="img-fluid rounded-3 shadow-sm product-detail-img" />
            </div>
            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="fw-bold text-primary">@Model.NombreProducto</h2>
                    <span class="badge bg-secondary mb-2">@Model.Marca</span>

                    <p class="text-muted mt-2">@Model.Descripcion</p>

                    <h3 class="fw-bold text-success mb-3">
                        @Model.Precio.ToString("C")
                    </h3>

                    @if (User.IsInRole("ADMIN"))
                    {
                        <p class="text-muted">
                            <i class="bi bi-box-seam"></i> Stock disponible:
                            <strong>@Model.Stock</strong>
                        </p>
                    }

                    <hr />

                    <div class="mt-3 d-flex flex-wrap align-items-center">
                        @if (User.IsInRole("ADMIN"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.IdProducto"
                               class="btn btn-warning me-2 mb-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.IdProducto"
                               class="btn btn-danger me-2 mb-2">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        }
                        else if (User.Identity.IsAuthenticated && User.IsInRole("USER"))
                        {
                            <form asp-controller="Venta" asp-action="AgregarAlCarrito" method="post" class="d-inline me-2 mb-2">
                                <input type="hidden" name="idProducto" value="@Model.IdProducto" />
                                <input type="hidden" name="cantidad" value="1" />
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-cart-plus"></i> Comprar
                                </button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2 mb-2">
                                <i class="bi bi-box-arrow-in-right"></i> Comprar
                            </a>
                        }

                        <a asp-action="Index" class="btn btn-outline-secondary mb-2">
                            <i class="bi bi-arrow-left-circle"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-detail-img {
        max-height: 400px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .product-detail-img:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .card-body h2 {
        font-size: 1.8rem;
    }

    .card-body h3 {
        font-size: 1.5rem;
    }
</style>