@model IEnumerable<IntiGuard.Models.Comprobante>

@{
    ViewData["Title"] = "Listado de Comprobantes";
}

<h2>Listado de Comprobantes</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Tipo</th>
            <th>Número</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                        <tr>
                            <td>@item.IdComprobante</td>
                            <td>@item.TipoComprobante</td>
                            <td>@item.NumeroComprobante</td>
                            <td>
                                <a class="btn btn-sm btn-info"
                                   asp-controller="Comprobante"
                                   asp-action="Details"
                                   asp-route-id="@item.IdComprobante">
                                    Ver Detalles
                                </a>
                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="4" class="text-center">No se encontraron comprobantes.</td>
                </tr>
        }
    </tbody>
</table>
