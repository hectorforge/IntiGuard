@model IntiGuard.Models.Comprobante

@{
    ViewData["Title"] = "Comprobante";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <h2 class="fw-bold mb-0">
                        <i class="bi bi-receipt-cutoff"></i> Comprobante de Compra
                    </h2>
                </div>

                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="fw-bold text-secondary">IntiGuard</h5>
                            <p class="mb-0 small text-muted">Soluciones de seguridad innovadoras</p>
                            <p class="mb-0 small text-muted">www.intiguard.com</p>
                        </div>
                        <div class="col-md-6 text-end">
                            <h6 class="fw-bold">Fecha:</h6>
                            <p>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>

                    <hr />

                    <div class="mb-3">
                        <h5 class="fw-bold text-dark">Datos del Comprobante</h5>
                        <p><strong>ID:</strong> @Model.IdComprobante</p>
                        <p><strong>Tipo:</strong> @Model.TipoComprobante</p>
                        <p><strong>Número:</strong> @Model.NumeroComprobante</p>
                    </div>

                    <hr />

                    @if (ViewBag.Detalles != null)
                    {
                        <h5 class="fw-bold text-dark">Detalle de Productos</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>Imagen</th>
                                        <th>Producto</th>
                                        <th>Cantidad</th>
                                        <th>Precio Unit.</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in ViewBag.Detalles)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@d.ImagenUrl" alt="@d.NombreProducto" width="60" class="img-thumbnail" />
                                            </td>
                                            <td>@d.NombreProducto</td>
                                            <td>@d.Cantidad</td>
                                            <td>@d.PrecioUnitario.ToString("C")</td>
                                            <td>@((d.Cantidad * d.PrecioUnitario).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    }

                    <div class="text-end mt-3">
                        <h4 class="fw-bold text-primary">
                            Total: @(ViewBag.Total != null ?
                            string.Format("{0:C}", ViewBag.Total) : "0.00")
                        </h4>
                    </div>

                </div>

                <div class="card-footer bg-light text-center py-3">
                    @if (User.IsInRole("ADMIN"))
                    {
                        <a asp-controller="Comprobante" asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left-circle"></i> Volver a Comprobantes
                        </a>
                    }
                    else if (User.IsInRole("USER"))
                    {
                        <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-primary me-2">
                            <i class="bi bi-house-door"></i> Seguir Comprando
                        </a>
                    }

                    <button onclick="window.print()" class="btn btn-success">
                        <i class="bi bi-printer"></i> Imprimir
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>
