@model IntiGuard.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body text-center">
            <img src="@Model.Foto" alt="Foto de perfil"
                 class="rounded-circle mb-3"
                 style="width:150px; height:150px; object-fit:cover; border:4px solid #0d6efd;" />

            <h3 class="fw-bold">@Model.Nombres @Model.Apellidos</h3>
            <span class="badge bg-primary">@Model.NombreRol</span>

            <hr />

            <div class="row text-start mt-4">
                <div class="col-md-6 mb-3">
                    <i class="bi bi-envelope"></i> <strong>Correo:</strong>
                    <p>@Model.Correo</p>
                </div>
                <div class="col-md-6 mb-3">
                    <i class="bi bi-telephone"></i> <strong>Teléfono:</strong>
                    <p>@Model.Telefono</p>
                </div>
                <div class="col-md-6 mb-3">
                    <i class="bi bi-house"></i> <strong>Dirección:</strong>
                    <p>@Model.Direccion</p>
                </div>
                <div class="col-md-6 mb-3">
                    <i class="bi bi-person-badge"></i> <strong>ID Usuario:</strong>
                    <p>@Model.IdUsuario</p>
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            </div>
        </div>
    </div>
</div>
