@model IntiGuard.Models.Usuario
@{
    ViewData["Title"] = "Completar Perfil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-center">Completa tu perfil</h3>

                    <form method="post">
                        <input type="hidden" asp-for="Correo" />

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label"></label>
                            <input asp-for="Telefono" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label"></label>
                            <input asp-for="Direccion" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Clave" class="form-label">Crear contraseña (opcional)</label>
                            <input asp-for="Clave" type="password" class="form-control" />
                            <small class="text-muted">Solo si quieres iniciar sesión directamente con tu correo y contraseña.</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>