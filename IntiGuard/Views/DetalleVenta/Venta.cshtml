@model IEnumerable<IntiGuard.Models.DetalleVenta>

@{
    ViewData["Title"] = "Detalles de la Venta";
    var idVenta = ViewBag.IdVenta;
}


<h2>Detalles de la Venta #@idVenta</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreProducto</td>
                    <td>@item.Cantidad</td>
                    <td>@item.PrecioUnitario.ToString("C")</td>
                    <td>@(item.Cantidad * item.PrecioUnitario).ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay productos registrados en esta venta.</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Venta" asp-action="Index">Volver a ventas</a>
