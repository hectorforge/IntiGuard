@model IEnumerable<IntiGuard.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Gestión de Usuarios</h2>
    <a asp-action="Create" class="btn btn-success">
        Agregar Usuario
    </a>
</div>

<table class="table table-striped table-hover align-middle shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Activo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.IdUsuario</td>
                <td>@usuario.Nombres</td>
                <td>@usuario.Apellidos</td>
                <td>@usuario.Correo</td>
                <td>@usuario.Telefono</td>
                <td>
                    @if (usuario.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td>@usuario.NombreRol</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@usuario.IdUsuario" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@usuario.IdUsuario" class="btn btn-sm btn-info">
                        Detalles
                    </a>

                    @if (!usuario.HasPurchases)
                    {
                        <a asp-action="Delete" asp-route-id="@usuario.IdUsuario" class="btn btn-sm btn-danger">
                            Eliminar
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-secondary" disabled>
                            Bloqueado
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
