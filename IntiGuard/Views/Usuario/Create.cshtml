@model IntiGuard.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>Crear Usuario</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input asp-for="Nombres" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Foto</label>
        <input asp-for="Foto" type="text" class="form-control" placeholder="URL de la foto" />
    </div>

    <div class="form-group">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" class="form-control" type="password" />
    </div>

    <div class="form-group">
        <label>Rol</label>
        <select asp-for="IdRol" class="form-select" asp-items="ViewBag.Roles"></select>
    </div>

    <div class="form-check mt-2">
        <input asp-for="Activo" class="form-check-input" checked="checked" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
