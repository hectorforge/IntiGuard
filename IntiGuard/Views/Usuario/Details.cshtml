@model IntiGuard.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>Detalles del Usuario</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombres</dt>
        <dd class="col-sm-10">@Model.Nombres</dd>

        <dt class="col-sm-2">Apellidos</dt>
        <dd class="col-sm-10">@Model.Apellidos</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Correo</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.NombreRol</dd>

        <dt class="col-sm-2">Fecha Registro</dt>
        <dd class="col-sm-10">@Model.FechaRegistro.ToShortDateString()</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdUsuario">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
