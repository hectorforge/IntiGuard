@model IntiGuard.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Detalles del Usuario</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombres</dt>
                        <dd class="col-sm-8">@Model.Nombres</dd>

                        <dt class="col-sm-4">Apellidos</dt>
                        <dd class="col-sm-8">@Model.Apellidos</dd>

                        <dt class="col-sm-4">Correo</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Telefono</dd>

                        <dt class="col-sm-4">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>

                        <dt class="col-sm-4">Foto</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Foto))
                            {
                                <img src="@Model.Foto" alt="Foto Usuario" class="img-thumbnail" width="120" />
                            }
                            else
                            {
                                <span class="text-muted">No registrada</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Rol</dt>
                        <dd class="col-sm-8">@Model.NombreRol</dd>

                        <dt class="col-sm-4">Fecha Registro</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Activo</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Activo ? "bg-success" : "bg-danger")">
                                @(Model.Activo ? "Sí" : "No")
                            </span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning me-2">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
