@model IntiGuard.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdUsuario" />
    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input asp-for="Nombres" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="IdRol"></label>
        <input asp-for="IdRol" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


<div>
