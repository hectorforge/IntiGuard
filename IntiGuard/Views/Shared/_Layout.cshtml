@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IntiGuard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .navbar .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #fff;
        }

        .dropdown-menu-header {
            padding: 10px;
            border-bottom: 1px solid #eee;
            text-align: center;
        }

            .dropdown-menu-header img {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 8px;
                border: 3px solid #0d6efd;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm" id="mainNav">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/Logo/IconIntiGuard.jpg"
                     alt="IntiGuard"
                     class="@(ViewData["Title"]?.ToString() == "Inicio" ? "logo-navbar-home" : "logo-navbar-small")" />
                <span class="fw-bold ms-2 text-white">IntiGuard</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="Index">Productos</a>
                    </li>

                    @if (HttpContextAccessor.HttpContext.User.IsInRole("USER"))
                    {
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Venta" asp-action="Carrito">
                                <i class="bi bi-cart3"></i> Carrito
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartCount">
                                    0
                                </span>
                            </a>
                        </li>
                    }

                    @if (HttpContextAccessor.HttpContext.User.IsInRole("ADMIN"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Producto" asp-action="AdminIndex">Gestionar Productos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Venta" asp-action="Index">Ventas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Comprobante" asp-action="Index">Comprobantes</a></li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        var fullName = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value ?? User.Identity.Name;
                        var foto = User.Claims.FirstOrDefault(c => c.Type == "Foto")?.Value
                        ?? "https://thumbs.dreamstime.com/b/vector-de-perfil-avatar-predeterminado-foto-usuario-redes-sociales-desconocida-icono-desconocido-en-184816085.jpg";

                        <li class="nav-item dropdown">
                            <a class="nav-link d-flex align-items-center dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="@foto" alt="Foto de usuario" class="user-avatar me-2" />
                                <span class="d-none d-md-inline">@fullName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow">
                                <li class="dropdown-menu-header">
                                    <img src="@foto" alt="Foto usuario" />
                                    <div><strong>@fullName</strong></div>
                                    <small class="text-muted">@User.Identity.Name</small>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-lines-fill me-2"></i> Mi Perfil</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light ms-2" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @if (ViewData["Title"]?.ToString() == "Inicio")
    {
        <section class="hero d-flex align-items-center text-center">
            <div class="container">
                <h1 class="text-white">Bienvenido a IntiGuard</h1>
                <p class="text-light">Soluciones de seguridad innovadoras</p>
                <a href="@Url.Action("Index", "Producto")" class="btn btn-primary mt-3">Ver productos</a>
            </div>
        </section>
    }

    <main class="container my-5" style="min-height:100vh">
        @RenderBody()
    </main>

    <footer class="text-center py-4 bg-dark text-white">
        <h5 class="mb-3 fw-bold">Síguenos en nuestras redes</h5>
        <div class="d-flex justify-content-center gap-3 mb-3">
            <a href="https://facebook.com" target="_blank" class="social-icon"><i class="bi bi-facebook"></i></a>
            <a href="https://instagram.com" target="_blank" class="social-icon"><i class="bi bi-instagram"></i></a>
            <a href="https://twitter.com" target="_blank" class="social-icon"><i class="bi bi-twitter"></i></a>
            <a href="https://linkedin.com" target="_blank" class="social-icon"><i class="bi bi-linkedin"></i></a>
        </div>
        <p class="mb-0">&copy; @DateTime.Now.Year - IntiGuard. Todos los derechos reservados.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        function actualizarCarrito() {
            $.get("@Url.Action("GetCartCount", "Venta")", function (data) {
                if (data.count !== undefined) {
                    $("#cartCount").text(data.count);
                    if (data.count > 0) {
                        $("#cartCount").show();
                    } else {
                        $("#cartCount").hide();
                    }
                }
            });
        }
        $(document).ready(function () {
            actualizarCarrito();
            setInterval(actualizarCarrito, 10000);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
