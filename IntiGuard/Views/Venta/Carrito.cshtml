@model List<IntiGuard.Models.DetalleVenta>
@{
    ViewData["Title"] = "Carrito";
}

<h2 class="fw-bold text-primary mb-4">Mi Carrito</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Tu carrito está vacío.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdProducto</td>
                    <td>@item.Cantidad</td>
                    <td>@item.PrecioUnitario.ToString("C")</td>
                    <td>@(item.Cantidad* item.PrecioUnitario).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <form asp-action="ConfirmarCompra" method="post">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-bag-check"></i> Confirmar Compra
            </button>
        </form>
    </div>
}