@model List<IntiGuard.Models.DetalleVenta>
@{
    ViewData["Title"] = "Carrito";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">Mi Carrito</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-cart-x"></i> Tu carrito está vacío.
            <a asp-controller="Producto" asp-action="Index" class="btn btn-primary ms-2">Ver productos</a>
        </div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio Unitario</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.Cantidad</td>
                        <td>@item.PrecioUnitario.ToString("C")</td>
                        <td>@(item.Cantidad* item.PrecioUnitario).ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <h4>
                Total:
                <span class="text-success fw-bold">
                    @Model.Sum(x => x.Cantidad * x.PrecioUnitario).ToString("C")
                </span>
            </h4>
        </div>

        <form asp-action="ConfirmarCompra" method="post" class="text-end mt-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Confirmar Compra
            </button>
        </form>
    }
</div>
