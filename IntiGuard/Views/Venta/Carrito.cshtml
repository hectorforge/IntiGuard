@model List<IntiGuard.Models.DetalleVenta>
@{
    ViewData["Title"] = "Carrito";
    var productos = ViewBag.Productos as IEnumerable<IntiGuard.Models.Producto>;
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-cart3"></i> Mi Carrito</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-cart-x fs-1"></i>
            <p class="mt-3 fs-5">Tu carrito está vacío.</p>
            <a asp-controller="Producto" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-bag"></i> Ver productos
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning mb-3">
            <i class="bi bi-info-circle"></i>
            Presiona el botón <strong><i class="bi bi-arrow-repeat"></i></strong> para actualizar la cantidad,
            verificar el stock disponible y recalcular tu subtotal.
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th class="text-end">Precio Unitario</th>
                        <th style="width:200px;" class="text-center">Cantidad</th>
                        <th class="text-end">Subtotal</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var producto = productos?.FirstOrDefault(p => p.IdProducto == item.IdProducto);

                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(producto?.ImagenUrl ?? "/img/no-image.png")"
                                         alt="Producto"
                                         class="rounded me-3"
                                         style="width:70px;height:70px;object-fit:cover;" />
                                    <div>
                                        <div class="fw-semibold">@((producto?.NombreProducto) ?? $"Producto #{item.IdProducto}")</div>
                                        <small class="text-muted">@((producto?.Marca) ?? "")</small>
                                    </div>
                                </div>
                            </td>

                            <td class="text-end">@item.PrecioUnitario.ToString("C")</td>

                            <td class="text-center">
                                <form asp-action="ActualizarCantidad" method="post" class="d-flex justify-content-center align-items-center">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idProducto" value="@item.IdProducto" />
                                    <input type="number"
                                           name="cantidad"
                                           value="@item.Cantidad"
                                           min="1"
                                           step="1"
                                           class="form-control text-center me-2"
                                           style="max-width:100px;"
                                           oninput="this.value = Math.max(1, Math.floor((this.value||0)));" />
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Actualizar cantidad">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                </form>
                            </td>

                            <td class="text-end">@((item.Cantidad * item.PrecioUnitario).ToString("C"))</td>

                            <td class="text-center">
                                <form asp-action="EliminarDelCarrito" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idProducto" value="@item.IdProducto" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Seguir comprando
                </a>
            </div>

            <div class="col-md-6 text-end">
                <div class="mb-3">
                    <h4 class="mb-0">
                        Total:
                        <span class="text-success fw-bold">@Model.Sum(x => x.Cantidad * x.PrecioUnitario).ToString("C")</span>
                    </h4>
                </div>

                <form asp-action="ConfirmarCompra" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Confirmar Compra
                    </button>
                </form>
            </div>
        </div>
    }
</div>
