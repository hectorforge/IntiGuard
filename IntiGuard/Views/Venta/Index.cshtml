@model IEnumerable<IntiGuard.Models.Venta>
@{
    ViewData["Title"] = "Ventas";
}

<h2 class="fw-bold text-primary mb-4">Listado de Ventas</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.IdVenta</td>
                <td>@venta.IdUsuario</td>
                <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                <td>@venta.Total.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@venta.IdVenta" class="btn btn-sm btn-primary">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
