@model IEnumerable<IntiGuard.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-receipt"></i> Listado de Ventas
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Tipo Comprobante</th>
                        <th>Número</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var venta in Model)
                        {
                            <tr>
                                <td>@venta.IdVenta</td>
                                <td>@venta.Cliente</td>
                                <td>@venta.TipoComprobante</td>
                                <td>@venta.NumeroComprobante</td>
                                <td class="fw-bold text-success">@venta.Total.ToString("C")</td>
                                <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-controller="DetalleVenta" asp-action="Venta" asp-route-id="@venta.IdVenta"
                                       class="btn btn-sm btn-outline-dark">
                                        <i class="bi bi-eye"></i> Ver Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-3">
                                <i class="bi bi-exclamation-circle"></i> No hay ventas registradas.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
