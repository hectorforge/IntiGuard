@model IntiGuard.Models.Venta
@{
    ViewData["Title"] = "Compra Confirmada";
}

<div class="container text-center my-5">
    <i class="bi bi-check-circle-fill text-success" style="font-size:4rem;"></i>
    <h2 class="mt-3">¡Compra realizada con éxito!</h2>
    <p class="lead">Tu comprobante ha sido generado.</p>

    <div class="card mx-auto mt-4 shadow-sm" style="max-width:500px;">
        <div class="card-body">
            <h5 class="card-title">Detalle de la Venta</h5>
            <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
            <p><strong>Fecha:</strong> @Model.FechaVenta.ToShortDateString()</p>
        </div>
    </div>
</div>
